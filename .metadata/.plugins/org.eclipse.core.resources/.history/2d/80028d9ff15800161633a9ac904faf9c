package daytwo;

public class dayTwoAssignment {

	public static void main(String[] args) {
		// #1
		String helloWorld = new String("Hello World");
		// #2
		int date = 1492;
		// #3
		boolean dog = true;
		// #4
		String todaysDate = "August 2nd 2016";
		// #5
		Double burgerPrice = 5.45;
		// #6
		char letter = 'X';
		// #1a
		System.out.println(helloWorld);
		// #2a
		System.out.println("Columbus Sailed the world in " + date);
		// #3a
		System.out.println("It is " + dog + " that I have a dog at home.");
		// #4a
		System.out.println("Today is " + todaysDate);
		// #5a
		System.out.println("I spent $" + burgerPrice + " on a cheeseburger");
		// #6a
		System.out.println(letter + " marks the spot");

		// Start of Array Assignment 1
		String[] name = new String[10];
		name[0] = "George";
		name[1] = "Chris";
		name[2] = "Stewart";
		name[3] = "Vafa";
		name[4] = "Ami";
		name[5] = "Mike";
		name[6] = "Kyle";
		name[7] = "John";
		name[8] = "Justin";
		name[9] = "Jamal";
		
		// Print Array 1D
		int count = 0;
		do {
			System.out.println("My name is " + name[count]);
			count++;
		} while (count < 10);
		
		//Start of Array Assignment 2
		String[]food = new String[10];
		food[0] = "Pizza";
		food[1] = "Hot Dog";
		food[2] = "Hamburger";
		food[3] = "French Fries";
		food[4] = "Steak";
		food[5] = "Sub";
		food[6] = "Chips";
		food[7] = "Soup";
		food[8] = "Nuts";
		food[9] = "Ice Cream";
		
		//Print 2nd 1D Array
		int count2 = 0;
		do {
			System.out.println("I like to eat " + food[count2]);
			count2++;
		} while (count2 < 10);
		
	}
	public void calculateAverage(Double[] args) {
		
		double test1 = .80;
		double test2 = .60;
		double averageScore = (((test1 + test2)/ 2)* 100);
		
		System.out.println("Average test score: " + averageScore);
	}

}

